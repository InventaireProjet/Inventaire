<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/back_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Category">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_color"/>

        <include layout="@layout/blue_line" />

        <ListView
            android:id="@+id/lvProductsCategory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:numColumns="6">


        </ListView>

        <LinearLayout
            android:id="@+id/layoutStockCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/squareTotalStockCategory"
                android:layout_width="@dimen/square_width"
                android:layout_height="@dimen/square_height"
                android:background="@color/indicator_done" />

            <TextView
                android:id="@+id/txtStockCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:paddingLeft="20dp"
                android:text="Stock 35000"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/txtStockCategoryValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Valeur du Stock 770 000 CHF"
                android:textColor="@color/text_color"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

<!--Fake thanks to http://stackoverflow.com/questions/11690274/is-there-a-way-to-offset-a-view-from-center-in-android !-->
            <View
                android:id="@+id/fake"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/buttonModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/fake"
                android:background="@color/button_background"
                android:text="@string/modify"
                android:textColor="@color/button_text"/>

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/fake"
                android:background="@color/button_background"
                android:text="@string/delete"
                android:textColor="@color/button_text"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>